{% extends 'test/base.html.twig' %}

{% block content %}
<h1>{{ character.Name }}</h1>
<p>Alignment: {{character.Alignment}}</p>
<table>
    <tr>
        <th>
            Ability
        </th>
        <th>
            Score
        </th>
        <th>
            Modifier
        </th>
    </tr>
    {% for ability in character.Abilities %}
    <tr>
        <td>
            {{ability.Name}}
        </td>
        <td>
            {{ability.TotalScore}}
        </td>
        <td>
            {{ability.Modifier}}
        <td>
    <tr>
    {% endfor %}

</table>

<table>
    <tr>
        <th>
            Skill
        </th>
        <th>
            Modifier
        </th>
    </tr>
    {% for skill in character.Skills %}
    <tr>
        <td>
            {{skill.Name}}
        </td>
        <td>
            {% if character.canPerformSkill(skill.Name) %}
            {{ character.getSkillBonus(skill.Name) }}
            {% else %}
            -
            {% endif %}
        <td>
    <tr>
    {% endfor %}

</table>


{% endblock %}

{% extends 'test/base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/attackCalculator.css') }}">
{% endblock %}

{% block content %}
<h1>{{ characterName }}</h1>
<div class="btn-group" role="group" aria-label="...">
{% for mod in toggleableModifiers %}
  <button type="button" id="{{"attackButton" ~ mod.UniqueName}}" class="btn btn-default" data-toggle="button" aria-pressed="false" onclick="attackButtonToggled('attackButton{{mod.UniqueName}}',{{mod.Modifier}})">{{mod.DisplayName}}</button>
{% endfor %}
  <p class="AttackModifierTotal" id="totalAttackModifier">{{baseModifier}}</p>
</div>
<script>
function attackButtonToggled(buttonID, value){
  //this function is called before the class list is toggled
  var total = Number(document.getElementById("totalAttackModifier").innerHTML);
  //button is toggled off
  if(document.getElementById(buttonID).classList.contains("active"))
  {
    total = total - value;
  }
  else //button is toggled on
  {
    total = total + value;
  }
  document.getElementById("totalAttackModifier").innerHTML = total.toString();
}
</script>
{% endblock %}
